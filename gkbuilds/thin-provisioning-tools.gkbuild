src_configure() {
	local myconf=(
		--with-optimisation=''
		--disable-testing
		--enable-static
	)

	gkconf "${myconf[@]}"
}

src_compile() {
	MAKEOPTS+=" V="
	gkmake
}

src_install() {
	local MYMAKEOPTS=( "DESTDIR=${D}" )
	MYMAKEOPTS+=( -j1 )
	MYMAKEOPTS+=( "DATADIR=${D}/usr/share" )
	MYMAKEOPTS+=( "install" )

	gkmake "${MYMAKEOPTS[@]}"

	rm -rf \
		"${D}"/usr/share
}
