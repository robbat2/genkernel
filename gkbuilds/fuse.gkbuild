src_configure() {
	local myconf=(
		--disable-example
	)

	gkconf "${myconf[@]}"
}

src_install() {
	default

	rm -rf \
		"${D}"/dev \
		"${D}"/etc \
		"${D}"/sbin \
		"${D}"/usr/bin \
		"${D}"/usr/share
}
